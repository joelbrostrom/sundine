<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="100dp" android:width="100dp" android:gravity="center|top">
        <shape android:shape="oval">
            <solid android:color="@color/yellow" />
            <size
                android:width="@dimen/grid_4x"
                android:height="@dimen/grid_4x" />
        </shape>
    </item>

    <item android:height="90dp" android:width="100dp" android:gravity="center|top">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
            <size
                android:width="@dimen/grid_10x"
                android:height="@dimen/grid_10x" />
            <stroke android:width="1dp"/>

        </shape>
    </item>

    <item android:height="75dp" android:width="100dp"  android:gravity="center|top">
        <shape android:shape="oval">
            <solid android:color="@android:color/holo_blue_bright" />
            <size
                android:width="@dimen/grid_2x"
                android:height="@dimen/grid_2x" />
            <stroke android:width="1dp"/>

        </shape>
    </item>




</layer-list>