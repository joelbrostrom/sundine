<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <EditText
        android:id="@+id/email_input_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_5x"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/grid_3x"
        android:layout_marginStart="@dimen/grid_3x"
        android:background="@drawable/background_rounded_white"
        android:gravity="center|start"
        android:hint="text goes here..."
        android:text="user@email.com"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingEnd="@dimen/grid_1x"
        android:paddingStart="@dimen/grid_1x" />


    <EditText
        android:id="@+id/password_input_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_5x"
        android:layout_below="@id/email_input_field"
        android:layout_marginEnd="@dimen/grid_3x"
        android:layout_marginStart="@dimen/grid_3x"
        android:layout_marginTop="@dimen/grid_5x"
        android:background="@drawable/background_rounded_white"
        android:gravity="center|start"
        android:hint="text goes here..."
        android:text="12345"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingEnd="@dimen/grid_1x"
        android:paddingStart="@dimen/grid_1x" />

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/grid_4x"-->
        <!--android:layout_below="@id/email_input_field"-->
        <!--android:background="@drawable/background_rounded_white"/>-->


    <Button
        android:id="@+id/login_button"
        android:layout_width="124dp"
        android:layout_height="@dimen/grid_6x"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/grid_10x"
        android:background="@drawable/background_rounded_white"
        android:text="Login"
        android:textStyle="bold" />


</RelativeLayout>